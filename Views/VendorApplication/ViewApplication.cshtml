@model ViewApplicationViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Application</title>
</head>

<body>
    <div class="container">
        <h2>Vendor Application</h2>
        <br />
        <h3>Application No: @Model.VendorApplicationId</h3>
        <br />

        <div class="card mb-3">
            <div class="card-header">Application Date</div>
            <div class="card-body">
                <h5 class="card-title">@Model.ApplicationDate</h5>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Applicant Name</div>
            <div class="card-body">
                <h5 class="card-title">@Model.Applicant.FirstName  @Model.Applicant.LastName</h5>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Applicant ID Number</div>
            <div class="card-body">
                <h5 class="card-title">@Model.Applicant.IDNumber </h5>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Applicant PhoneNumber</div>
            <div class="card-body">
                <h5 class="card-title">@Model.Applicant.PhoneNumber </h5>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Proof of ID </div>
            <div class="card-body">
                <div class="col-md-5">
                    <img class="featurette-image img-fluid mx-auto" src="@Model.IdProofUrl" alt="Generic placeholder image">
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Proof of ID </div>
            <div class="card-body">
                <div class="col-md-5">
                    <img class="featurette-image img-fluid mx-auto" src="@Model.ResidenceProof" alt="Generic placeholder image">
                </div>
            </div>
        </div>

        <form method="post" asp-action="ApproveApplication" asp-route-applicationId="@Model.VendorApplicationId">
            <button class="btn btn btn-success">Approve Application</button>
        </form>

        <form method="post" asp-action="DeclineApplication" asp-route-purchaseId="@Model.VendorApplicationId">
            <button class="btn btn btn-danger">Decline Application</button>
        </form>


    </div>
</body>
</html>





