@model CheckoutViewModel;


    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">@Model.Checkout.CheckoutItems.Count</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Checkout.CheckoutItems)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.unitItem.Name</h6>
                    </div>
                    <span class="text-muted">@item.unitItem.Price</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total</span>
                <strong>@Model.CheckoutTotal</strong>
            </li>
        </ul>
    </div>