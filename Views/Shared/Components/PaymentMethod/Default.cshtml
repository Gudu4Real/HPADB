@model PaymentMethodViewModel

<h4 class="mb-3">Payment Method</h4>

<div class="d-block my-3">
    @foreach (var paymentMethod in Model.PaymentMethods)
    {
        <div class="custom-control custom-radio">
            <input id="@paymentMethod.PaymentMethodId" name="paymentMethod" type="radio" class="custom-control-input" required>
            <label class="custom-control-label" for="@paymentMethod.PaymentMethodId">@paymentMethod.PaymentMethodName</label>
        </div>
    }
</div>


<div class="row">
    <div class="col-md-6 mb-3">
        <label for="@Model.AmountPaid">Amount Paid</label>
        <input type="text" class="form-control" id="@Model.AmountPaid" placeholder="0.00" required>
        <div class="invalid-feedback">
            Enter the amount Paid using this payment method
        </div>
    </div>
</div>
