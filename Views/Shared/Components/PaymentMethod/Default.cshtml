@model PaymentMethod

<div class="form-group">
    <div class="row">
        <div class="col-md-5 mb-3">
            <label asp-for="PaymentMethodName">Payment Method</label>
            <select class="custom-select d-block w-100" asp-for="PaymentMethodName" required>
                <option value="">Choose...</option>
                <option value="Cash">Cash</option>
                <option value="EcoCash">EcoCash</option>
                <option value="Cash(USD)">Cash(USD)</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="AmountPaid">Amount</label>
            <input asp-for="AmountPaid" placeholder="0.00" required>
            <span asp-validation-for="AmountPaid" class="text-danger"></span>
        </div>
    </div>
</div>

<style>
    .row { 
        margin-left: 0;
    }
</style>


