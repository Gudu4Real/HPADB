@model unitItem

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="img-thumbnail">
            <div class="figure-caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3><a href="#">@Model.Name</a></h3>
            </div>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="Checkout" asp-action="AddToCheckout" asp-route-itemId="@Model.unitItemId">
                    Add to cart
                </a>
            </p>
        </div>

    </div>