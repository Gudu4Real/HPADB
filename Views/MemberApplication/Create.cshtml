@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@model CreateVendorApplicationViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Submit Application</title>
</head>
<body>
    <div id="main">
        <div id="wrapper">
            <div class="inner">
                <form enctype="multipart/form-data" asp-controller="MemberApplication" asp-action="create" method="post" class="mt-3">
                    <div class="field">
                        <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FullName" class="form-control" placeholder="" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field">
                        <label asp-for="IdProof" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="IdProof" class="form-control custom-file-input" />
                                <label class="custom-file-label">Choose image...</label>
                            </div>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="ResidencyProof" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="ResidencyProof" class="form-control custom-file-input" />
                                <label class="custom-file-label">Choose image...</label>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" asp-for="ApplicantId" class="form-control custom-file-input" value="@UserManager.GetUserId(User)" />


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit Application</button>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                </form>
            </div>

        </div>
    </div>

</body>
</html>


<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jquery/jquery-ui.min.js"></script>

@section Scripts{

    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        })
    </script>
}
