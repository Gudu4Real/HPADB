@model EditUserViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditUser</title>
</head>
<body>
    <div id="main">
        <div class="wrapper">
            <div class="inner">
                <h1>Edit User</h1>

                <form class="mt-3" method="post">
                    <div class="field">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" />
                        </div>
                    </div>

                    <div class="field half first">
                        <label asp-for="FirstName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field half">
                        <label asp-for="LastName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half first">
                        <label asp-for="IdNumber" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="IdNumber" disabled class="form-control" />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half">
                        <label asp-for="Number" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field first half">
                        <label asp-for="AddedRole" class=" col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="AddedRole" class="custom-select mr-sm-2" placeholder="Category" asp-items="@((List<SelectListItem>)ViewData["availableRoles"])">
                                <option value="">Roles</option>
                            </select>
                            <span asp-validation-for="AddedRole" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field half">
                        <label asp-for="RemovedRole" class="col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="RemovedRole" class="custom-select mr-sm-2" placeholder="Category" asp-items="@((List<SelectListItem>)ViewData["currentRoles"])">
                                <option value="">Roles</option>
                            </select>
                            <span asp-validation-for="RemovedRole" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn button special fit">Update</button>
                            <a asp-action="ListUsers" class="btn button">Cancel</a>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>

                <div class="card">
                    <div class="card-header">
                        <h3>User Roles</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <h5 class="card-title">@role</h5>

                            }
                        }
                        else
                        {
                            <h5 class="card-title">User has no Roles Assigned</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
