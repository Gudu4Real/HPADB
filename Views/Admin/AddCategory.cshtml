
@model AddCategoryViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Category</title>
</head>
<body>
    <form asp-controller="Admin" asp-action="AddCategory" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryName" class="form-control" placeholder="Name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Add Category</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

            </div>
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>


    </form>
</body>
</html>
