
@model AddCurrencyViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Currency</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Admin" asp-action="AddCurrency" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="CurrencyName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CurrencyName" class="form-control" placeholder="Name" />
                    <span asp-validation-for="CurrencyName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Rate" class="form-control" placeholder="Rate" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Currency</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

                </div>
            </div>


            <div asp-validation-summary="All" class="text-danger"></div>


        </form>
    </div>
</body>
</html>
