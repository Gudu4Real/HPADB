@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

    <div class="container">
        <h1>All Roles </h1>

        @if (Model.Any())
        {
            <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole"> Create Role</a>
            <a asp-action="ListUsers" asp-controller="Admin" class="btn btn-primary">Manage Users</a>


            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-action="AddOrRemoveUsers" asp-controller="Admin" asp-route-roleId="@role.Id" class="btn btn-primary">Add or Remove Users</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created
                </div>
                <div class="card-body">
                    <h5 class="card-title">Use the button below to create a role </h5>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole"> Create Role</a>
                </div>
            </div>
        }
    </div>