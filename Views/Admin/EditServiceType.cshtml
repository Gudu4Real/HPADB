@model COHApp.ViewModels.EditServiceTypeViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Manage Service</title>
</head>
<body>
    <div id="main">
        <div class="wrapper">
            <div class="inner">
                <h1>Manage Service</h1>

                <form class="mt-3" method="post">
                    <div class="field">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="field">
                        <label asp-for="ServiceTypeName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ServiceTypeName" class="form-control" />
                            <span asp-validation-for="ServiceTypeName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="Pricing" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Pricing" class="form-control" />
                            <span asp-validation-for="Pricing" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ul class="actions">
                            <li><button type="submit" class="btn button special">Update</button></li>
                            <li><a asp-action="ListServiceTypes" class="btn button">Cancel</a></li>
                        </ul>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>

        </div>
    </div>
</body>
</html>
