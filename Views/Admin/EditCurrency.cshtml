@model EditCurrencyViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Currency</title>
</head>
<body>
    <h1>Edit Currency</h1>

    <form class="mt-3" method="post">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CurrencyName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CurrencyName" class="form-control" />
                <span asp-validation-for="CurrencyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListCurrencies" class="btn btn-primary">Cancel</a>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>

</body>
</html>
