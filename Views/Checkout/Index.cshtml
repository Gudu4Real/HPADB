@model BataCMS.ViewModels.CheckoutViewModel

<div class="row checkoutForm">
    <h2>Your shopping cart</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Items</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Checkout.CheckoutItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.unitItem.Name</td>
                    <td class="text-right">@line.unitItem.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Amount * line.unitItem.Price).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Checkout" asp-action="RemoveFromCheckout" asp-route-unitItemId="@line.unitItem.unitItemId"><i class="fas fa-times" aria-hidden="true"></i></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CheckoutTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Purchase" asp-action="Checkout">Check out</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Add more drinks<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="UnitItem" asp-action="List" asp-route-category="Alcoholic">Alcoholic</a></li>
                    <li><a asp-controller="UnitItem" asp-action="List" asp-route-category="Non-alcoholic">Non Alcoholic</a></li>
                    <li><a asp-controller="UnitItem" asp-action="List" asp-route-category="Food">Food</a></li>

                </ul>
            </a>
        </div>
    </div>
</div>