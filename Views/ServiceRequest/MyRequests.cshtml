<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Requests</title>

    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        //Area Chart configuration
        function drawChart() {
            var areaChartData = google.visualization.arrayToDataTable([
                ['Year', 'Company 1', 'Company 2', 'Company 3'],
                ['2018', 8.4, 7.9, 6.3],
                ['2019', 6.9, 6.5, 4.4],
                ['2020', 6.5, 6.4, 2.0],
                ['2021', 4.4, 6.2, 9.1]
            ]);

            var areaChartOptions = {
                backgroundColor: '#ddd',
                legend: { position: 'bottom' },
                connectSteps: false,
                colors: ['#4374E0', '#53A8FB', '#F1CA3A', '#E49307'],
                isStacked: true,
            };


            // Some raw data (not necessarily accurate)
            var data = google.visualization.arrayToDataTable([
                ['Revenue Sources', 'Km 000'],
                ['Company 1', 12],
                ['Company 2', 27],
                ['Company 3', 7],
            ]);

            var options = {
                title: 'Revenue Contribution',
                is3D: true,
            };

            //Drawing the graphs
            var areaChart = new google.visualization.SteppedAreaChart(document.getElementById('area_chart_div'));
            areaChart.draw(areaChartData, areaChartOptions);

            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);

        }
    </script>
</head>


