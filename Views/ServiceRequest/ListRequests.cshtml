<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pending Requests</title>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
        function drawChart() {

            // piechart configuration

            var data = google.visualization.arrayToDataTable([
                ['Sector', 'Agriculture and Forestry', 'Education', 'Energy', 'Financial Services', 'Information Communications Technology', 'Infrastructure', 'Manufacturing', 'Mining', 'Real Estate', 'Tourism', 'Transport and Logistics', 'Health Services'],
                ['2016/17', 136, 691, 629, 1026, 366, 569.6, 136, 691, 629, 1026, 366, 569.6],
                ['2017/18', 165, 938, 522, 998, 450, 614.6, 135, 1120, 599, 1268, 288, 682],
                ['2018/19', 135, 1120, 599, 1268, 288, 682, 139, 1110, 615, 968, 215, 609.4],
                ['2020/21', 157, 1167, 587, 807, 397, 623, 157, 1167, 587, 807, 397, 623],
                ['2021/22', 139, 1110, 615, 968, 215, 609.4, 157, 1167, 587, 807, 397, 623]
            ]);

            var options = {
                title: 'Revenue brought by each sector',
                vAxis: { title: 'Km 000' },
                hAxis: { title: 'Years' },
                seriesType: 'bars',
                series: { 12: { type: 'line' } }
            };

            //Graph configuration

            var graphData = google.visualization.arrayToDataTable([
                ['Year', 'Sales', 'Expenses'],
                ['2018', 1170, 460],
                ['2019', 660, 1120],
                ['2020', 1030, 540],
                ['2021', 1000, 400],
            ]);

            var graphOptions = {
                title: 'IDC Performance',
                hAxis: { title: 'Year', titleTextStyle: { color: '#333' } },
                vAxis: { minValue: 0 }
            };

            //Drawing the charts
            var graph = new google.visualization.AreaChart(document.getElementById('piechart_3d'));
            graph.draw(graphData, graphOptions);

            var chart = new google.visualization.ComboChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        };
    </script>
</head>

