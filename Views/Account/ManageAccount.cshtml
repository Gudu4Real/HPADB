@model EditUserViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Manage Account</title>
</head>
<body>
    <div id="main">
        <div class="wrapper">
            <div class="inner">
                <h1>Manage Account</h1>

                <form class="mt-3" method="post">
                    <div class="field">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" />
                        </div>
                    </div>

                    <div class="field half first">
                        <label asp-for="FirstName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field half">
                        <label asp-for="LastName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half first">
                        <label asp-for="IdNumber" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="IdNumber" class="form-control" />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half">
                        <label asp-for="Number" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn button special fit">Update</button>
                            <a asp-action="ListUsers" class="btn button">Cancel</a>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
