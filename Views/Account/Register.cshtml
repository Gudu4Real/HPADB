
@model RegisterViewModel

<body class="text-center">
    <div id="wrapper">
        <div class="inner">
            <div class="col-md-8 col-md-offset-2">
                <h2>Register now </h2>
                <h4>Create a new account </h4>
                <hr />
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">

                    <div class="field half first">
                        <label asp-for="FirstName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half">
                        <label asp-for="LastName" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field half first">
                        <label asp-for="IdNumber" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="IdNumber" class="form-control" />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field half">
                        <label asp-for="Number" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="Password" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="field">
                        <label asp-for="ConfirmPassword" class="col-md-5 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group pull-right formPullRightButton">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="button special fit" value="Register" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<style>
    html,
    body {
        height: 100%;
    }

    .form-horizontal {
        width: 100%;
        max-width: 800px;
        padding: 15px;
        margin: 0 auto;
    }


</style>
