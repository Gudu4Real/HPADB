@model COHApp.ViewModels.ConfirmPhoneViewModel
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Confirm Phone number";
}

<h4>@ViewData["Title"]</h4>


<body class="text-center">
    <div id="wrapper">
        <div class="inner">
            <div class="row">
                <div class="col-md-6">
                    <form method="post">
                        <p>
                            We have sent a confirmation code to @Model.PhoneNumber
                            Enter the code you receive to confirm your phone number.
                        </p>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="VerificationCode"></label>
                            <input asp-for="VerificationCode" class="form-control" placeholder="Verification Code" required autofocus>
                            <span asp-validation-for="VerificationCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Confirm</button>
                        <p>Phone Numeber not correct?<a asp-action="ManageAccount" asp-controller="Account" asp-route-id="@UserManager.GetUserId(User)">Click here</a> To Edit your account information</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>