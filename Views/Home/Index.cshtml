@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model HomeViewModel
<head>
    <link href="~/Content/carousel.css" rel="stylesheet" />
</head>

<main role="main">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" src="~/Images/carousel1.jpg" alt="">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>We are here for you</h1>
                        @if (!signInManager.IsSignedIn(User))
                        {
                        <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Sign up Now</a></p>
                        }
                    </div>
                </div>
            </div>

                <div class="carousel-item">
                    <img class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" src="~/Images/carousel2.jpg" alt="">
                    <div class="container">
                        <div class="carousel-caption">
                            <p>We offer the Good in Good time</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" src="~/Images/carousel2.png" alt="">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1>See what we have on offer</h1>
                            <p>A variety of food and drink selection. See what we have on offer!</p>
                            <p><a class="btn btn-lg btn-primary" asp-controller="UnitItem" asp-action="List" asp-route-category="All">Browse</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
      

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        @await Component.InvokeAsync("CategoryMenu")
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Second group">
                        @await Component.InvokeAsync("CurrencySelectMenu")
                    </div>
                    <div class="btn-group" role="group" aria-label="Third group">
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <a asp-action="Create" asp-controller="unitItem" asp-route-id="" class="btn btn-primary">Add </a>
                        }
                    </div>
                </div>

                @if (Model.HomeItems.Any())
                {
                    <div class="row">

                        @foreach (var item in Model.HomeItems)
                        {
                            if (item.InStock == true)
                            {
                                @await Html.PartialAsync("UnitItemSummary", item);
                            }
                            else if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                @await Html.PartialAsync("UnitItemSummary", item);

                            }
                        }
                    </div>

                }
                else
                {
                    <h1 class="cover-heading">Empty Category</h1>
                    <p class="lead">It seems that this category is currently, Why not add try our other categories</p>

                }
            </div>
        </div>


</main>
