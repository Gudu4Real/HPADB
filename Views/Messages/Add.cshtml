
@model COHApp.ViewModels.AddMessageViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Announcement</title>
</head>
<body>
    <div id="main">
        <div id="wrapper">
            <div class="inner">
                <form asp-controller="Messages" asp-action="Add" method="post" class="mt-3">

                    <div class="field">
                        <label asp-for="MessageTitle" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="MessageTitle" class="form-control" placeholder="Title" />
                            <span asp-validation-for="MessageTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="MessageContent" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="MessageContent" class="form-control"></textarea>
                            <span asp-validation-for="MessageContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ul class="actions">
                            <li>
                                <button type="submit" class="btn button special ">Add Message</button>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="BulletinIndex" class="btn button">Cancel</a>
                            </li>
                        </ul>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>


                </form>
            </div>
        </div>
    </div>
</body>
</html>
