@model COHApp.ViewModels.EditMessageViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Message</title>
</head>
<body>
    <div id="main">
        <div class="wrapper">
            <div class="inner">
                <h1>Edit Message</h1>

                <form class="mt-3" method="post">
                    <div class="field">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="field">
                        <label asp-for="MessageTitle" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="MessageTitle" class="form-control" />
                            <span asp-validation-for="MessageTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="MessageContent" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="MessageContent" class="form-control"></textarea>
                            <span asp-validation-for="MessageContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ul class="actions">
                            <li><button type="submit" class="btn button special">Update</button></li>
                            <li><a asp-action="List" class="btn button">Cancel</a></li>
                        </ul>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>


                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the message: @Model.MessageTitle')">Delete Message</button>
                </form>
            </div>

        </div>
    </div>
</body>
</html>
