@model IEnumerable<COHApp.Data.Models.DispatchedService>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dispatched Services</title>
</head>

<div id="main">
    <div id="wrapper">
        <div class="inner">
            <form method="post" asp-action="PostExportExcel">
                <button class="button special">ExportExcel</button>
            </form>

            <button class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">List Dispatches from...</button>

            <div class="dropdown-menu">
                <a class="dropdown-item" asp-controller="DispatchedService" asp-action="List" asp-route-filter="hour">Last hour</a>
                <a class="divider"></a>
                <a class="dropdown-item" asp-controller="DispatchedService" asp-action="List" asp-route-filter="day">Last Day...</a>
                <a class="divider"></a>
                <a class="dropdown-item" asp-controller="DispatchedService" asp-action="List" asp-route-filter="week">Last Week...</a>
                <a class="divider"></a>
                <a class="dropdown-item" asp-controller="DispatchedService" asp-action="List" asp-route-filter="all">All</a>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Dispatch ID</th>
                        <th>Service</th>
                        <th class="text-right">Dispatch Date/Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var line in Model)
                        {
                            <tr>
                                <td class="text-center">@line.DispatchedServiceId</td>
                                <td class="text-left">@line.ServiceRequest.ServiceType.ServiceName</td>
                                <td class="text-right">
                                    @line.DispatchTime)
                                </td>
                                <td class="text-center"><a class="btn btn-primary" asp-controller="DispatchedService" asp-action="Detail" asp-route-id="@line.DispatchedServiceId">Dispatch Details</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">No Booking Made Yet</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>